<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.inceptai.dobby.ui.WifiDocActivity">

    <!--
     There is a crash if you use android:backgroundTing in the FAB xml. Use app:backgroundTint.
     -->

    <RelativeLayout
        android:layout_width="wrap_content"
        android:id="@+id/bw_gauge_fl"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_height="wrap_content">

    <com.inceptai.dobby.ui.CircularGauge
        android:id="@+id/bw_gauge"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:gaugePointStartColor="@android:color/holo_red_dark"
        app:gaugePointEndColor="@android:color/secondary_text_light_nodisable"
        app:gaugePointSize="80"
        app:gaugeStartAngle="135"
        app:gaugeStrokeCap="ROUND"
        app:gaugeStrokeColor="@android:color/holo_blue_bright"
        app:gaugeStrokeWidth="6dp"
        app:gaugeStartValue="0"
        app:gaugeEndValue="100"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:gaugeSweepAngle="270" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:text="45"
            android:textSize="60sp"
            android:gravity="center_vertical|center_horizontal"
            android:layout_alignTop="@id/bw_gauge"
            android:layout_alignEnd="@id/bw_gauge"
            android:layout_alignRight="@id/bw_gauge"
            android:layout_alignStart="@id/bw_gauge"
            android:layout_alignLeft="@id/bw_gauge"
            android:textColor="@android:color/holo_red_dark"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bw_gauge_fl"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp">

        <android.support.v7.widget.CardView
            android:id="@+id/wifi_cardview"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            app:cardBackgroundColor="@color/orangeMediumLight1"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            app:cardMaxElevation="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textColor="@android:color/white"
                    android:fontFamily="sans-serif-condensed"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:text="@string/ping_latency" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>


        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6" />

        <android.support.v7.widget.CardView
            android:id="@+id/ping_cardview"
            android:layout_width="wrap_content"
            app:cardBackgroundColor="@color/orangeMediumLight1"
            android:layout_height="100dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            app:cardMaxElevation="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:padding="10dp"
                    android:textColor="@android:color/white"
                    android:gravity="center_horizontal"
                    android:fontFamily="sans-serif-condensed"
                    android:textStyle="bold"
                    android:text="@string/wifi_quality" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/main_fab_button"
        android:src="@mipmap/wifi_meter"
        app:backgroundTint="@color/orangeMedium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:elevation="4dp"
        app:rippleColor="@color/orangeLight"
        android:clickable="true"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>