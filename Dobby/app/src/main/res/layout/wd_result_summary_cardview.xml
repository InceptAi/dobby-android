<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:animateLayoutChanges="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/wd_cv_upload_bandwidth_ll"
            android:layout_height="wrap_content"
            android:layout_marginLeft="39dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/bottom_summary_tv"
            android:layout_marginTop="8dp"
            android:layout_marginStart="39dp">

            <TextView
                android:layout_width="wrap_content"
                tools:text="Upload"
                android:textSize="12sp"
                android:paddingBottom="5dp"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    tools:text="25.6"
                    android:textSize="18sp"
                    android:textColor="@color/soberDarkBlue"
                    android:id="@+id/upload_bandwidth_tv"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    tools:text="mbps"
                    android:textSize="10sp"
                    android:paddingStart="2dp"
                    android:paddingLeft="2dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingStart="5dp"
            app:layout_constraintLeft_toRightOf="@+id/wd_cv_upload_bandwidth_ll"
            android:id="@+id/wd_cv_download_bandwidth_ll"
            android:layout_height="wrap_content"
            android:layout_marginLeft="46dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/bottom_summary_tv"
            android:layout_marginTop="8dp"
            android:layout_marginStart="46dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:textSize="12sp"
                tools:text="Download" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    tools:text="25.6"
                    android:textSize="18sp"
                    android:textColor="@color/soberDarkBlue"
                    android:id="@+id/download_bw_tv"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    tools:text="mbps"
                    android:textSize="10sp"
                    android:paddingStart="2dp"
                    android:paddingLeft="2dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>

        <Button
            android:layout_width="100dp"
            android:text="What does this mean ?"
            style="@style/MyButton.Flat"
            app:layout_constraintLeft_toRightOf="@+id/wd_cv_download_bandwidth_ll"
            android:textColor="@android:color/holo_blue_dark"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/bottom_summary_tv" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Overall your bandwidth looks good"
            android:gravity="center_horizontal"
            android:paddingTop="15dp"
            android:textColor="@color/soberMildGreen"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/bottom_summary_tv" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>