    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/vertical_orange_reverse_gradient"
    tools:context="com.inceptai.dobby.ui.WifiDocOnboardingActivity">

