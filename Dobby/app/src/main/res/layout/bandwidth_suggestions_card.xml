<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="5dp"
    android:animateLayoutChanges="true"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:text="Summary"
            android:textSize="12sp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="Overall Bandwidth is good"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            android:id="@+id/overall_bw_tv"
            android:fontFamily="sans-serif-condensed-thin"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text="Overall Bandwidth is good"
            android:textColor="@color/Green0"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:id="@+id/download_bw_tv"
            android:fontFamily="sans-serif-condensed-thin"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text="Overall Bandwidth is good"
            android:textColor="@color/Green0"
            android:textSize="14sp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:id="@+id/upload_bw_tv"
            android:fontFamily="sans-serif-condensed-thin"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:text="MORE"
            android:textSize="15sp"
            android:textColor="@android:color/holo_blue_dark"
            style="@style/MyButton.Flat"
            android:padding="10dp"
            android:id="@+id/more_bw_button"
            android:layout_height="wrap_content" />
    </LinearLayout>
</android.support.v7.widget.CardView>