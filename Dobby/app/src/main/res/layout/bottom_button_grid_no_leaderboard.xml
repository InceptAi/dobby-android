<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/center_vertical_guideline"
        app:layout_constraintGuide_percent="0.5"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="180dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/center_horizontal_guideline"
        app:layout_constraintGuide_percent="0.5"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="256dp"
        tools:layout_editor_absoluteX="0dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/green_button_selector"
        android:layout_marginBottom="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        style="@style/MyLargeImageButton.Base"
        android:focusable="true"
        android:clickable="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/button_top_left_fl"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toTopOf="@+id/center_horizontal_guideline">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center_horizontal"
            android:src="@drawable/ic_share_64dp" />

        <TextView
            android:layout_width="wrap_content"
            android:text="Share"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center_horizontal"
            android:layout_marginBottom="2dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/green_button_selector"
        android:layout_margin="1dp"
        style="@style/MyLargeImageButton.Base"
        android:focusable="true"
        android:clickable="true"
        app:layout_constraintTop_toBottomOf="@id/center_horizontal_guideline"
        app:layout_constraintRight_toLeftOf="@id/center_vertical_guideline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/button_bottom_left_fl">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:padding="2dp"
            android:layout_gravity="center_horizontal|top"
            android:src="@drawable/ic_info_outline_white_24dp" />

        <TextView
            android:layout_width="match_parent"
            android:text="About"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="10sp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="2dp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/green_button_selector"
        android:layout_margin="1dp"
        style="@style/MyLargeImageButton.Base"
        android:focusable="true"
        android:clickable="true"
        android:id="@+id/button_bottom_right_fl"
        app:layout_constraintTop_toBottomOf="@id/center_horizontal_guideline"
        app:layout_constraintLeft_toRightOf="@id/center_vertical_guideline"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:padding="2dp"
            android:layout_gravity="center_horizontal|top"
            android:src="@drawable/ic_rate_review_white_24dp" />

        <TextView
            android:layout_width="match_parent"
            android:text="Feedback"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="10sp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="2dp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content" />
    </FrameLayout>
</android.support.constraint.ConstraintLayout>