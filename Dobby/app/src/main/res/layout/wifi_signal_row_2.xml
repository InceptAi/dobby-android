<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Signal"
        android:id="@+id/title_tv"
        tools:text="TitleOne"
        android:textSize="14sp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/lessDarkGray"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:id="@+id/bottom_row_rl"

        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-100"
            android:id="@+id/value_tv"
            tools:text="-100"
            android:fontFamily="sans-serif-condensed"
            android:textSize="20sp"
            android:textColor="@color/basicGreen"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dbM"
            android:id="@+id/unit_tv"
            tools:text="dbM"
            android:textStyle="bold"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:fontFamily="sans-serif-condensed"
            android:textSize="12sp"
            android:layout_alignBaseline="@id/value_tv"
            android:layout_toRightOf="@id/value_tv"
            android:layout_toEndOf="@id/value_tv"
            android:layout_alignBottom="@id/value_tv"
            android:textColor="@color/darkGray"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/signal_3"
            android:id="@+id/icon_iv"
            android:layout_toRightOf="@id/unit_tv"
            android:layout_toEndOf="@id/unit_tv"
            android:layout_marginBottom="3dp"
            android:layout_alignBottom="@id/unit_tv"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>