<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:background="@drawable/rounded_shape_blue_background"
    android:id="@+id/dobbyChatLayout"
    android:padding="3dp"
    android:layout_marginTop="3dp"
    android:layout_marginLeft="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginRight="80dp"
    android:layout_marginEnd="80dp"
    android:layout_height="wrap_content">
<TextView
    android:id="@+id/dobbyInitialsTv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="25sp"
    android:textColor="@color/basicWhite"
    android:padding="2dp"
    android:text="" />

<TextView
    android:id="@+id/dobbyTextTv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_gravity="start|center_vertical"
    android:textColor="@color/basicWhite"
    android:textSize="15sp"
    android:text="@string/dobby_chat_hint"
    />
</LinearLayout>